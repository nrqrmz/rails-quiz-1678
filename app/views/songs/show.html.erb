<h1><%= @song.title %></h1>
<p><%= @song.year %></p>
<p><%= @song.category %></p>

<h2>Here are the reviews for this song:</h2>

<hr>

<%= form_for [@song, @review] do |f| %>
<%= f.text_field :content %>
<%= f.submit %>
<% end %>

<hr>

<ol>
  <% @song.reviews.each do |review| %>
    <li>
      <%= review.content %>
    </li>
  <% end %>
</ol>
